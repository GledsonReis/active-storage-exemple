<p id="notice"><%= notice %></p> 
 
<h3><%= @bucket.name %></h3> 
 
<%= link_to 'Edit', edit_bucket_path(@bucket) %> | 
<%= link_to 'Back', buckets_path %> | 
<%= link_to 'Upload Files', new_bucket_file_upload_path(@bucket) %> 
 
<h5>Files</h5> 
 
<ul> 
  <% @bucket.files.each do |file| %> 
    <li>
      <%= image_tag(file) if file.present? && file.content_type.in?(%w(image/jpg image/gif image/jpeg image/png))%>
      <%= link_to file.filename, url_for(file) %>
      <%= link_to "X", bucket_file_upload_path(@bucket, file), method: :delete, data: { confirm: "Tem certeza?" } %>
    </li>
  <% end %>
</ul>